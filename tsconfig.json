{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],      // <- isto habilita tipos de fetch/URLSearchParams
    "types": ["node"]              // <- garante tipos Node
  },
  "include": ["src"]
}
